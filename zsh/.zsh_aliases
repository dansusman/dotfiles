red() {
  if [ -z "$1" ]; then
    echo "Usage: red <branch_name>"
    return 1
  fi
  
  case "$1" in
    susman/*)
      git sw "$1" -c staging
      ;;
    *)
      git sw "susman/$1" -c staging
      ;;
  esac
}

