theme = gruber-darker
font-family = Iosevka Term
font-size = 18

# CMD+SHIFT+K = show sesh picker (Ctrl+A -> Shift+K)
keybind = super+shift+k=text:\x01\x4b

# CMD+SHIFT+R = show sesh root picker (Ctrl+A -> Shift+R)
keybind = super+shift+r=text:\x01\x52

# CMD+J = sesh entrypoint from outside tmux (Escape -> S)
keybind = super+j=text:\x1b\x73

# CMD+G = lazygit in new tmux window (Ctrl+A -> g)
keybind = super+g=text:\x01\x67

# SHIFT+ENTER = new line in Claude Code
keybind = shift+enter=text:\n
